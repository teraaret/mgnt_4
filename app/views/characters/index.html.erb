<!---->

<p id="notice"><%= notice %></p>

<h1>Characters</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Body</th>
      <th>Race</th>
      <th>Gender</th>
      <th>Magenta</th>
      <th>Story</th>
      <th>Faction</th>
      <th>Country</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @characters.each do |character| %>
      <tr>
        <td><%= character.name %></td>
        <td><%= character.body %></td>
        <td><%= character.race_id %></td>
        <td><%= character.gender_id %></td>
        <td><%= character.magenta %></td>
        <td><%= character.story_id %></td>
        <td><%= character.faction_id %></td>
        <td><%= character.country_id %></td>
        <td><%= link_to 'Show', character %></td>
        <td><%= link_to 'Edit', edit_character_path(character) %></td>
        <td><%= link_to 'Destroy', character, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

