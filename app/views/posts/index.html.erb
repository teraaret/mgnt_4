<div id="page">

    <p id="notice"><%= notice %></p>

    <h1>Дневник наблюдений</h1>

    <%= link_to 'Новая запись', new_post_path, class: 'center_btn' %>

    <% @posts.each do |post| %>
    <div class="post">
        <span><%= post.created_at.strftime('%d %B %Y') %></span>
        <h2><%= link_to ('#'+post.id.to_s+" "+post.title), post %></h2>
        <p><%= simple_format(post.body.truncate(400), {}, wrapper_tag: "p") %></p>
        <div class="links">
            <%= link_to content_tag(:i, "edit", class: "material-icons"), edit_post_path(post) %>
            <%= link_to content_tag(:i, "delete", class: "material-icons"), post, method: :delete, data: { confirm: 'Are you sure?' } %>
        </div>
    </div>
    <% end %>

</div>